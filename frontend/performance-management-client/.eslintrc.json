{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:testing-library/react"
    ],
    "overrides": [
      {
        "files": ["**/*.spec.js", "**/*.test.js"],
        "rules": {
          "testing-library/prefer-screen-queries": "off",
          "testing-library/no-await-sync-query": "off"
        }
      }
    ],
    "plugins": [
      "testing-library"
    ],
    "rules": {}
  }